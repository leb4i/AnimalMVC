@model animalsMVC.Models.Animal

@{
    ViewData["Title"] = $"Details - {Model?.Name}";
}

<div class="container mt-4">
    <!-- Navigation buttons at top -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        @if (ViewBag.PreviousId != null)
        {
            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@ViewBag.PreviousId">
                <i class="bi bi-chevron-left"></i> Previous Animal
            </a>
        }
        else
        {
            <button class="btn btn-outline-secondary" disabled>
                <i class="bi bi-chevron-left"></i> Previous Animal
            </button>
        }

        @if (ViewBag.NextId != null)
        {
            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@ViewBag.NextId">
                Next Animal <i class="bi bi-chevron-right"></i>
            </a>
        }
        else
        {
            <button class="btn btn-outline-secondary" disabled>
                Next Animal <i class="bi bi-chevron-right"></i>
            </button>
        }
    </div>

    <div class="row">
        <!-- Left column: Animal details -->
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model?.Name</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Name:</dt>
                        <dd class="col-sm-7 fw-bold">@Model?.Name</dd>

                        <dt class="col-sm-5 text-muted">Type:</dt>
                        <dd class="col-sm-7">@Model?.Type</dd>

                        <dt class="col-sm-5 text-muted">Age:</dt>
                        <dd class="col-sm-7">@Model?.Age @(Model?.Age == 1 ? "year" : "years")</dd>

                        <dt class="col-sm-5 text-muted">Domestic Animal:</dt>
                        <dd class="col-sm-7">
                            @if (Model?.IsDomestic == true)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Action buttons -->
            <div class="d-grid gap-2">
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                }
                <a class="btn btn-outline-secondary" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>

        <!-- Right column: Gallery -->
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <partial name="_Gallery" model="Model" />
                </div>
            </div>
        </div>
    </div>
</div>
