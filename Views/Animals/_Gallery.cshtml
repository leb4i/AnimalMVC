@model animalsMVC.Models.Animal

@{
    // prepare list of image urls
    var imageFiles = new List<string>();
    if (!string.IsNullOrEmpty(Model?.ImageFiles))
    {
        imageFiles = Model.ImageFiles.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
            .Select(f => Url.Content($"~/images/animals/{f}"))
            .ToList();
    }

    if (!imageFiles.Any())
    {
        // fallback sample images
        imageFiles = new List<string>
        {
            Url.Content("~/images/animals/animal-1.svg"),
            Url.Content("~/images/animals/animal-2.svg"),
            Url.Content("~/images/animals/animal-3.svg")
        };
    }
}

<div class="animal-gallery">
    <div class="mb-2">
        <img id="mainImage" src="@imageFiles.First()" class="img-fluid rounded" style="max-height:420px; width:100%; object-fit:contain;" />
    </div>
    <div class="d-flex gap-2 flex-wrap">
@foreach (var img in imageFiles)
{
    <img src="@img" class="img-thumbnail" style="width:90px; height:70px; object-fit:cover; cursor:pointer;" onclick="document.getElementById('mainImage').src='@img'" />
}
    </div>
</div>
